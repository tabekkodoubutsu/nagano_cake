<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

  <div class="field">
    <tr>
      <th>名前</th>
      <th>(姓)</th>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <th>(名)</th>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  
  <div class="field">
    <tr>
      <th>フリガナ</th>
      <th>(セイ)</th>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      <th>(メイ)</th>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>
  
  <div class="field">
    <th>メールアドレス</th>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <th>郵便番号（ハイフンなし）</th>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  
  <div class="field">
    <th>住所</th>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <th>電話番号（ハイフンなし）</th>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  
  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "customer/shared/links" %>
