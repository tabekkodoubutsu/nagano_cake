

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>
  <table class='col-md-8 offset-md-1'>
    <th>新規会員登録</th>
    <tr>
      <td>名前</td>
      <td>(姓)</td><td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
      <td>(名)</td><td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
    </tr>
  
  
    <tr>
      <td>フリガナ</td>
      <td>(セイ)</td><td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
      <td>(メイ)</td><td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
    </tr>
  
  
  <div class="field">
    <tr>
      <td>メールアドレス</td>
      <td></td><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
      <td>郵便番号（ハイフンなし）</td>
      <td></td><td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
      <td>住所</td>
      <td></td><td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
      <td>電話番号（ハイフンなし）</td>
      <td></td><td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
      <td>
        <%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </td>
      <td></td>
      <td>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <td><%= f.label :"パスワード(確認用)" %></td>
      <td></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
  </div>

  <div class="actions">
    <tr>
      <td></td>
      <td></td>
      <td><%= f.submit "Sign up" ,class:"btn btn-success"%></td>
    </tr>
  </div>
 
  </table>
<% end %>

<table class='col-md-8 offset-md-1'>
  <tr>
    <th>既に登録済みの方</th>
  </tr> 
  <tr>
    <td><%= link_to"こちら",new_customer_session_path %>からログインしてください</td>
  </tr> 
</table>
