<div class='container px-5 px-sm-0'>Z
     
    <div class='row'>
      <div class='col-md-12 offset-md-1'>
        <h2>注文履歴詳細</h2>
        <!-- 登録フォーム -->
        <table class='table table-hover table-inverse'>
          <tr>
              <th>購入者</th>
              <td><%= @order_detail.order.customer.last_name %><%= @order_detail.order.customer.first_name %></td>
          </tr>
          <tr>
              <th>注文日</th>
              <td><%= @order_detail.order.created_at %></td>
          </tr>
          <tr>
              <th>配送先</th>
              <td><%= @order_detail.order.address %></td>
          </tr>
          <tr>
              <th>注文ステータス</th>
              <td>
                <%= form_with model: @order,  local:true do |f| %>
                  <%= f.collection_select :status, @order, :status, :payment_method %>
                <% end %>
              </td>
          </tr>
          
        </table>
        <!-- 登録フォームここまで -->
        
        <!-- ジャンル一覧表示 -->
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>ジャンル</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= genre.name %>
                </td>
                <td>
                  <%= link_to"編集する",edit_admin_genre_path(genre.id) ,class:"btn btn-sm btn-success"%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <!-- ジャンル一覧表示ここまで -->
        <%#= paginate @genres %>
       </div>
     </div>
</div>