<div class='container px-5 px-sm-0'>
     <div class='row'>
       <div class='col-md-8 offset-md-1'>
         <h2>注文履歴一覧</h2>
         <table class='table table-hover table-inverse'>
           <thead>
             <tr>
               <th>購入日時</th>
               <th>購入者</th>
               <th>注文個数</th>
               <th>注文ステータス</th>
               <th colspan="3"></th>
             </tr>
           </thead>
           <tbody>
             <% @order_details.each do |order_detail| %>
               <tr>
                 <td><%= order_detail.order.created_at %></td>
                 <td><%= order_detail.order.customer.last_name %><%= order_detail.order.customer.first_name %></td>
                 <td><%= order_detail.amount %></td>
                 <td>
                   <%= order_detail.order.payment_method %><%#= order_detail.order.status %></td>
               </tr>
             <% end %>
           </tbody>
         </table>
        <%= paginate @order_details %>
       </div>
     </div>
</div>