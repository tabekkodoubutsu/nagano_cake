<main>
   
   <div class='container px-5 px-sm-0'>
      
     <!--エラーメッセージここから-->
        <% if @genre.errors.any? %>
           <div id="error_explanation">
              <h2><%= @genre.errors.count %> errors prohibited this obj from being saved:</h2>
              <ul>
                 <% @genre.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                 <% end %>
              </ul>
           </div>
        <% end %>
     <!--エラーメッセージここまで-->
     
     <div class='row'>
       <div class='col-md-12 offset-md-1'>
         <h2>ジャンル一覧・追加</h2>
         <!-- 登録フォーム -->
         <table class='table table-hover table-inverse'>
              <%= form_with model: @genre, url: admin_genres_path , local:true do |f| %>
                 <div class="form-group">
                  <label for="genre_name">ジャンル</label>
                  <%= f.text_field :name, :class =>'form-control genre_name' %>

                  <%= f.submit 'Create Genre', class:"btn btn-success" %>
                 </div>
              <% end %>
         </table>
         <!-- 登録フォームここまで -->
         <!-- ジャンル一覧表示 -->
         <table class='table table-hover table-inverse'>
           <thead>
             <tr>
               <th>ジャンル</th>
               <th colspan="3"></th>
             </tr>
           </thead>
           <tbody>
             <% @genres.each do |genre| %>
               <tr>
                 <td>
                     <%= genre.name %>
                 </td>
                 <td>
                     <%= link_to"編集する",edit_admin_genre_path(genre.id) ,class:"btn btn-sm btn-success"%>
                 </td>
               </tr>
             <% end %>
           </tbody>
         </table>
         <!-- ジャンル一覧表示ここまで -->
        <%#= paginate @genres %>
       </div>
     </div>
   </div>
</main>