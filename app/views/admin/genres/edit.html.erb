<main>
   <div class='container'>
     <div class='row'>
       <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h1>ジャンル編集</h1>
            <!--エラーメッセージここから-->
            <% if @genre.errors.any? %>
              <div id="error_explanation">
                <h3><%= @genre.errors.count %> error prohibited this obj from being saved:</h3>
                <ul>
                  <% @genre.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <!--エラーメッセージここまで-->
         <!-- 編集フォーム -->
         
              <%= form_with model:@genre, url: admin_genre_path , local:true do |f| %>
                 <div class="form-group">
                  <label for="genre_name">ジャンル</label>
                  <%= f.text_field :name, :class =>'form-control genre_name' %>
                  <%= f.submit '変更を保存', class:"btn btn-success" %>
                 </div>
              <% end %>
         
         <!-- 編集フォームここまで -->
         
         <%= link_to"ジャンル一覧へ戻る",admin_genres_path %>
       </div>
     </div>
   </div>
</main>