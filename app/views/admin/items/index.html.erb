<div class="d-flex">
 <h2 class="table-secondary mb-3 ml-3 d-inline">商品一覧</h2>

    <div class="d-inline ml-auto mb-3">
        <%= link_to "商品新規追加",new_admin_item_path, class: 'btn btn-success'  %>
    </div> </div>
     <table class="table table-hover table-bordered table-inverse">
        <thead class="table-secondary">
  　　　  　<th>商品id</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
        
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %> </td>
               <td><%= link_to item.name,admin_item_path(item) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td> <% if item.is_active? %>
            <span class="text-success font-weight-bold">販売中</span>
          <% else %>
            <span class="text-danger font-weight-bold">販売停止中</span>
          <% end %></td>
          　　    </tr>
          <% end %>
        </tbody>
      </table>
