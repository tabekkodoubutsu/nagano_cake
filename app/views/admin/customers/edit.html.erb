 <div class='container px-5 px-sm-0'>
   
   <div class='row'>
     
     <div class='col-md-12'>
       <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
       <%= form_with model:@customer, url:admin_customer_path, local:true do |f| %>
         <table class='table table-hover table-inverse'>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
             <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name, autofocus: true %><%= f.text_field :first_name, autofocus: true %></td>
             </tr>
             <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana, autofocus: true %><%= f.text_field :first_name_kana, autofocus: true %></td>
             </tr>
             <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code, autofocus: true %></td>
             </tr>
             <tr>
              <td>住所</td>
              <td><%= f.text_field :address, autofocus: true %></td>
             </tr>
             <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number, autofocus: true %></td>
             </tr>
             <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, autofocus: true %></td>
             </tr>
             <tr>
              <td>会員ステータス</td>
              <td>
                <%=f.radio_button :is_deleted, FALSE %>有効 <%=f.radio_button :is_deleted, TRUE %>退会
              </td>
             </tr>
         </table>
             <!-- 決定ボタン -->
             <div class="form-group">
               <%= f.submit "変更を保存する", :class=>"btn btn-secondary"%>
             </div>
       <% end %>
     </div>
   </div>
 </div>