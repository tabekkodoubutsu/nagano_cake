<h4>注文情報入力</h4>
<%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
  <label><strong>支払方法</strong></label>

  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%><br>

  <label><strong>お届け先</strong></label>
  <%= f.radio_button :select_address, 0 %>
  <%= f.label :select_address, "ご自身の住所" %>
  〒<%= current_customer.postal_code %>
  <%= current_customer.address %>
  <%= current_customer.last_name %>
  <%= current_customer.first_name %><br>

  <%= f.radio_button :select_address, 1 %>
  <%= f.label :select_address, "登録済み住所から選択" %>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %><br>

  <%= f.radio_button :select_address, 2 %>
  <%= f.label :select_address, "新しいお届け先" %><br>
  <label>郵便番号（ハイフンなし）</label><br>
  <%= f.text_field :postal_code %><br>
  <label>住所</label><br>
  <%= f.text_area :address %><br>
  <label>宛名</label><br>
  <%= f.text_field :name %><br>

  <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>

  <% end %>
