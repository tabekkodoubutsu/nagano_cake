<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h2>マイページ</h2>
      <table class='table table-hover table-inverse'>
        <tr>
          <th>登録情報</th>
          <td><%= link_to"編集する",edit_customers_path(@customer) ,class:"btn btn-sm btn-success"%></td>
          <td><%= link_to"一覧を見る",addresses_path(@customer.id) ,class:"btn btn-sm btn-success"%></td>
        </tr>
      </table>
      <table class='table table-hover table-inverse'>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
     </div>
     <div>
      <table>
        <tr>
          <th>配送先</th>
          <td>
           <%= link_to"一覧を見る",addresses_path(@customer.id) ,class:"btn btn-sm btn-success"%>
          </td>
        </tr>
        <tr>
          <th>注文履歴</th>
          <td>
           <%= link_to"一覧を見る",orders_path(@customer.id) ,class:"btn btn-success btn-sm btn-block sign_up"%>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>