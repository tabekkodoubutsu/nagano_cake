 <h4 class="offset-1">配送先登録/一覧</h4>

  <%= form_with model:@address, local:true do |f| %>
        <div class="row">
          <div class="offset-1 col-4"><%= f.label "郵便番号（ハイフンなし）" %></div>
          <div class="col-7"><%= f.text_field :postal_code %></div>
          <div class="offset-1 col-4"><%= f.label "住所" %></div>
          <div class="col-7"><%= f.text_field :address%></div>
          <div class="offset-1 col-4"><%= f.label "宛名" %></div>
          <div class="col-7"><%= f.text_field :name %></div>
          <div class="offset-3 col-9"><%= f.submit "新規登録", class: "btn btn-success" %></div>
        </div>
      <% end %>
 
      <table class="table table-hover table-bordered table-inverse">
         <thead class="table-secondary">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          </thead>
           <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
              <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
            </td>
               </tr>
          <% end %>
          </tbody>
      </table>
