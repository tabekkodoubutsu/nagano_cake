<div class="row">
  <div class="container">
  <div class="row">
    <!--ここからサイドバー-->
<table class='table table-hover table-inverse col-md-2 '>
   <thead><tr>
   <th>ジャンル検索</th>
  </tr></thead>
   <% @genres.each do |genre| %>
   <tr><td><%= genre.name %></td></tr>
   <% end %>
   </table>
   <!--ここまでサイドバー-->
  <div class="col-md-5">
 <%= attachment_image_tag @item, :image, fallback: "no-image.jpg", size: "300x200" %>
 </div>
<div class="col-md-4">
 <h3><%= @item.name %></h3>
  <h4><%= @item.introduction %></h4>
  <h4>￥<%= @item.with_tax_price %> （税込）</h4>
   <% if customer_signed_in? %>

  <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <%= f.select :amount, *[1..10] %>
  <%= f.submit 'カートに入れる', class: 'btn btn-success' %>
  <% end %>
  <% end %>
 </div> </div> </div> </div>